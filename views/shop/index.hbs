<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
            {{ successMsg }}
        </div>
    </div>
</div>
{{# each products}}
<div class="row">
  {{#each this}}
    <div class="col-sm-6 col-md-4">

        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{this.title}}</h3>
              <p class="description">{{this.genre}}</p>
                <div class="clearfix">
                    <div class="price pull-left">${{this.price}}</div>
                      <a href="/add-to-cart/{{this._id}}" class="w3-button  w3-teal pull-right" role="button">Buy</a>
                      <a href="/preview/{{this._id}}" class="w3-button w3-red pull-right" role="button">View</a>
                </div>
            </div>

        </div>

    </div>
{{/each}}
</div>
{{/each }}
